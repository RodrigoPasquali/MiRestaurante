<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/login_button_style</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="editTextStyle" >
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/login_box_padding</item>
        <item name="android:background">@drawable/text_box</item>
    </style>

    <style name="menuButtonStyle" >
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/menu_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/menu_button_padding</item>
        <item name="android:background">@drawable/menu_button_style</item>
        <item name="drawableEndCompat">@drawable/right_arrow</item>
    </style>
</resources>