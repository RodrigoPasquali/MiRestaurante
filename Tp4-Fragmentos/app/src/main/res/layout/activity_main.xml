<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/violet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/enterText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:hint="Ingrese texto"
            android:gravity="center"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="@id/buttons"
            app:layout_constraintStart_toStartOf="@id/buttons"
            app:layout_constraintEnd_toStartOf="@id/sendButton" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Enviar"
            app:layout_constraintTop_toTopOf="@id/buttons"
            app:layout_constraintBottom_toTopOf="@id/buttonOne"
            app:layout_constraintStart_toEndOf="@id/enterText"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/buttonOne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Fragmento 1"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/enterText"
            app:layout_constraintBottom_toBottomOf="@id/buttons"
            app:layout_constraintStart_toStartOf="@id/buttons"
            app:layout_constraintEnd_toStartOf="@id/separator"/>

        <View
            android:id="@+id/separator"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="@color/grey"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/enterText"
            app:layout_constraintBottom_toBottomOf="@id/buttons"
            app:layout_constraintStart_toEndOf="@id/buttonOne"
            app:layout_constraintEnd_toStartOf="@id/buttonTwo"/>


        <TextView
            android:id="@+id/buttonTwo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Fragmento 2"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/enterText"
            app:layout_constraintBottom_toBottomOf="@id/buttons"
            app:layout_constraintEnd_toEndOf="@id/buttons"
            app:layout_constraintStart_toEndOf="@id/separator"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/containerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/buttons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>